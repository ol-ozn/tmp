<Window x:Class="Frontend.View.BoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BoardView" Height="450" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="{Binding Path=Title, Mode=OneTime}" HorizontalAlignment="Center"/>
            <ListBox ItemsSource="{Binding Path=Board.BoardIds, Mode=TwoWay}"  Height="100" Width="100" Background="BlueViolet">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FF003CFF" BorderThickness="1">
                            <StackPanel Orientation="Vertical" >
                                <TextBox Text="{Binding Path=Id, Mode=TwoWay}" BorderBrush="{x:Null}" Background="Aqua"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Delete Message" Click="Remove_Button" IsEnabled="{Binding Path=EnableForward,Mode=OneWay}"></Button>
            <Button Content="Logout" Click="Button_Click"/>

        </StackPanel>

    </Grid>
</Window>